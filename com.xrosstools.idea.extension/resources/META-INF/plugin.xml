<idea-plugin>
  <id>com.xrosstools.idea.extension</id>
  <name>Xross Tools Extension</name>
  <version>2025.1.1</version>
  <vendor email="he_jiehui@163.com" url="https://www.xrosstools.com">Xross Tools</vendor>
  <product-descriptor code="PXTENSION" release-date="20250826" release-version="20251"/>

  <description><![CDATA[
      Xross Tools Extension provides addons to x-series tools, such as <em>xunit, xstate, xdecision, xbehavior and xflow</em>.<br>
      This plugin depends on com.xrosstools.idea.gef since version 1.5.0.<br>
    ]]></description>

  <change-notes><![CDATA[
      <em>1.0</em> Inital versionï¼Œ provide search and export ability.
    ]]>
  </change-notes>

  <idea-version since-build="183.6156.11"/>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.java</depends>
  <depends>com.xrosstools.idea.gef</depends>

  <extensions defaultExtensionNs="com.xrosstools.idea.gef">
    <toolbarExtension implementation ="com.xrosstools.idea.extension.ToolbarExtension"/>
    <generateModelExtension implementation ="com.xrosstools.idea.extension.modelgen.CozeGenerateModelExtension"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <projectService serviceImplementation="com.xrosstools.idea.extension.modelgen.XrossToolsBotConfig"/>
  </extensions>

  <actions>
    <action id="Xross.TokenBot.Config"
            class="com.xrosstools.idea.extension.modelgen.TokenBotConfigAction"
            text="Configure Token &amp; Bot ID"
            description="Update authentication token and Bot ID">
      <add-to-group group-id="ToolsMenu" anchor="after" relative-to-action="Xross.TokenBot.Wizard"/>
    </action>
    <action id="Xross.TokenBot.Wizard"
            class="com.xrosstools.idea.extension.modelgen.CreateBotWizardAction"
            text="Create Bot Wizard"
            description="Simple Bot Configuration Wizard">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
  </actions>
</idea-plugin>